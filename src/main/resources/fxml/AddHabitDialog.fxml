<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<DialogPane xmlns:fx="http://javafx.com/fxml/1" prefWidth="280.0" xmlns="http://javafx.com/javafx/18"
            fx:controller="com.teampingui.controllers.AddHabitDialogController">
    <content>
        <GridPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
                  prefHeight="480.0" prefWidth="280.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <Label fx:id="lAddHabitHeading" text="Add a new habit to your list">
                <GridPane.margin>
                    <Insets left="40.0"/>
                </GridPane.margin>
            </Label>
            <TextField fx:id="tfNewHabitName" maxHeight="60.0" maxWidth="200.0" prefHeight="60.0" prefWidth="200.0"
                       promptText="New Habit's name" GridPane.rowIndex="1">
                <GridPane.margin>
                    <Insets left="40.0" right="40.0"/>
                </GridPane.margin>
            </TextField>
            <ListView fx:id="lvWeekdays" prefHeight="200.0" prefWidth="200.0" GridPane.rowIndex="2"
                      GridPane.rowSpan="7">
                <GridPane.margin>
                    <Insets left="40.0" right="40.0"/>
                </GridPane.margin>
            </ListView>
            <Button fx:id="btnCloseDialog" maxWidth="80.0" minWidth="80.0" mnemonicParsing="false"
                    onAction="#closeStage" prefWidth="80.0" text="Abbrechen" GridPane.rowIndex="9">
                <GridPane.margin>
                    <Insets left="40.0"/>
                </GridPane.margin>
            </Button>
            <Button fx:id="btnAddNewhabit" maxWidth="80.0" minWidth="80.0" mnemonicParsing="false"
                    onAction="#addNewHabit" prefWidth="80.0" text="OK" GridPane.rowIndex="9">
                <GridPane.margin>
                    <Insets left="140.0"/>
                </GridPane.margin>
                <VBox prefHeight="200.0" prefWidth="100.0"/>
            </Button>
            <VBox fx:id="vbErrorContainer" visible="false">
                <Label fx:id="lErrorMsgHabit" alignment="CENTER" prefHeight="33.0" prefWidth="1066.0" text="Error"
                       textFill="RED">
                    <font>
                        <Font size="1.0"/>
                    </font>
                </Label>
                <ProgressBar fx:id="pbErrorDuration" prefWidth="1066.0" progress="0.5"/>
            </VBox>
        </GridPane>
    </content>
</DialogPane>
