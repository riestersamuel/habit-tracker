<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<DialogPane xmlns:fx="http://javafx.com/fxml/1" prefWidth="280.0" xmlns="http://javafx.com/javafx/18"
            fx:controller="com.teampingui.controllers.AddHabitDialogController">
    <content>
        <GridPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
                  prefHeight="450.0" prefWidth="280.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Label fx:id="lAddHabitHeading" text="Add a new habit to your list">
                    <GridPane.margin>
                        <Insets left="40.0"/>
                    </GridPane.margin>
                </Label>
                <TextField fx:id="tfNewHabitName" maxHeight="60.0" maxWidth="200.0" prefHeight="60.0" prefWidth="200.0"
                           promptText="New Habit's name" GridPane.rowIndex="1">
                    <GridPane.margin>
                        <Insets left="40.0" right="40.0"/>
                    </GridPane.margin>
                </TextField>
                <Button fx:id="btnCloseDialog" maxWidth="80.0" minWidth="80.0" mnemonicParsing="false"
                        onAction="#closeStage" prefWidth="80.0" text="Abbrechen" GridPane.rowIndex="9">
                    <GridPane.margin>
                        <Insets left="40.0"/>
                    </GridPane.margin>
                </Button>
                <Button fx:id="btnAddNewhabit" maxWidth="80.0" minWidth="80.0" mnemonicParsing="false"
                        onAction="#addNewHabit" prefWidth="80.0" text="OK" GridPane.rowIndex="9">
                    <GridPane.margin>
                        <Insets left="140.0"/>
                    </GridPane.margin>
                </Button>
                <CheckBox fx:id="cbMonday" mnemonicParsing="false" text="Monday" GridPane.rowIndex="2">
                    <GridPane.margin>
                        <Insets left="40.0"/>
                    </GridPane.margin>
                </CheckBox>
                <CheckBox fx:id="cbTuesday" mnemonicParsing="false" text="Tuesday" GridPane.rowIndex="3">
                    <GridPane.margin>
                        <Insets left="40.0"/>
                    </GridPane.margin>
                </CheckBox>
                <CheckBox fx:id="cbWednesday" mnemonicParsing="false" text="Wednesday" GridPane.rowIndex="4">
                    <GridPane.margin>
                        <Insets left="40.0"/>
                    </GridPane.margin>
                </CheckBox>
                <CheckBox fx:id="cbThursday" mnemonicParsing="false" text="Thursday" GridPane.rowIndex="5">
                    <GridPane.margin>
                        <Insets left="40.0"/>
                    </GridPane.margin>
                </CheckBox>
                <CheckBox fx:id="cbFriday" mnemonicParsing="false" text="Friday" GridPane.rowIndex="6">
                    <GridPane.margin>
                        <Insets left="40.0"/>
                    </GridPane.margin>
                </CheckBox>
                <CheckBox fx:id="cbSaturday" mnemonicParsing="false" text="Saturday" GridPane.rowIndex="7">
                    <GridPane.margin>
                        <Insets left="40.0"/>
                    </GridPane.margin>
                </CheckBox>
                <CheckBox fx:id="cbSunday" mnemonicParsing="false" text="Sunday" GridPane.rowIndex="8">
                    <GridPane.margin>
                        <Insets left="40.0"/>
                    </GridPane.margin>
                </CheckBox>
                <VBox fx:id="vbErrorContainer" layoutY="0" prefHeight="43.0" prefWidth="1066.0" visible="false">
                    <children>
                        <Label fx:id="lErrorMsg" alignment="CENTER" prefHeight="33.0" prefWidth="1066.0" text="Error" textFill="RED" />
                        <ProgressBar fx:id="pbErrorDuration" prefWidth="1066.0" progress="0.5" />
                    </children>
                </VBox>
            </children>
        </GridPane>
    </content>
</DialogPane>
